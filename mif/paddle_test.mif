-- null
DEPTH = 4096;
WIDTH = 32;

ADDRESS_RADIX = DEC;
DATA_RADIX = BIN;

CONTENT
BEGIN
    -- nop
0000 : 00000000000000000000000000000000;
    -- addi $1, $0, 100        # Left Paddle Y = 100 (Higher up)
0001 : 00101000010000000000000001100100;
    -- sw   $1, 3002($0)       # WRITE to VGA Address 3002 (Paddle L)
0002 : 00111000010000000000101110111010;
    -- addi $2, $0, 300        # Right Paddle Y = 300 (Lower down)
0003 : 00101000100000000000000100101100;
    -- sw   $2, 3003($0)       # WRITE to VGA Address 3003 (Paddle R)
0004 : 00111000100000000000101110111011;
    -- addi $3, $0, 10         # Ball X position
0005 : 00101000110000000000000000001010;
    -- addi $4, $0, 240        # Ball Y position
0006 : 00101001000000000000000011110000;
    -- addi $5, $0, 1          # Ball Velocity (Speed)
0007 : 00101001010000000000000000000001;
    -- loop: nop
0008 : 00000000000000000000000000000000;
    -- add  $3, $3, $5         # Ball X = Ball X + Velocity
0009 : 00000000110001100101000000000000;
    -- sw   $3, 3000($0)       # Write Ball X to Address 3000
0010 : 00111000110000000000101110111000;
    -- sw   $4, 3001($0)       # Write Ball Y to Address 3001
0011 : 00111001000000000000101110111001;
    -- addi $6, $0, 0          # Reset counter
0012 : 00101001100000000000000000000000;
    -- addi $7, $0, 65000       # Delay amount (Adjust this if too fast/slow)
0013 : 00101001110000001111110111101000;
    -- delay: nop
0014 : 00000000000000000000000000000000;
    -- addi $6, $6, 1          # Increment counter
0015 : 00101001100011000000000000000001;
    -- bne  $6, $7, delay      # Loop until counter == 1000
0016 : 00010001100011111111111111111101;
    -- j    loop
0017 : 00001000000000000000000000001000;
[0018 .. 4095] : 00000000000000000000000000000000;
END;
